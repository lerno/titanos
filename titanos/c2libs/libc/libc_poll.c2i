module libc_poll;

import c2 local;

type Pollfd struct {
    c_int fd;
    i16 events;
    i16 revents;
} @(cname="pollfd")

func c_int poll(Pollfd* fds, c_ulong nfds, c_int timeout);

const u32 POLLIN   = 0x01;
const u32 POLLOUT  = 0x04;
const u32 POLLERR  = 0x08;
const u32 POLLHUP  = 0x10;
const u32 POLLNVAL = 0x20;
